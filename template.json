{
    "provisioners": [
        {
            "type": "file",
            "source": "scripts/veryfirstboot",
            "destination": "/tmp/veryfirstboot"
        },
        {
            "type": "file",
            "source": "scripts/chroot_script.sh",
            "destination": "/tmp/chroot_script.sh"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/wait_for_installer.sh",
                "scripts/run_in_chroot.sh"
            ]
        }
    ],
    "builders": [
        {
            "boot_command": [
                "<wait>menu.c32",
                "<enter><wait><tab>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<wait>",
                "answerfile=http://{{ .HTTPIP }}:{{ .HTTPPort }}/answerfile install ",
                "sshpassword=password atexit=shell --- /install.img<enter>"
            ],
            "boot_wait": "5s",
            "guest_additions_mode": "disable",
            "headless": false,
            "disk_size": 51200,
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "guest_os_type": "RedHat_64",
            "http_directory": "http",
            "iso_checksum_type": "none",
            "iso_url": "file:///home/jludlam/main.iso",
            "shutdown_command": "/sbin/shutdown -hP now",
            "ssh_password": "password",
            "ssh_port": 22,
            "ssh_username": "root",
            "ssh_wait_timeout": "10000s",
            "type": "virtualbox-iso",
            "vm_name": "XenServer",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus", "1"]
            ]
        },
        {
            "type": "xenserver-iso",
	    "remote_host": "gandalf.uk.xensource.com",
	    "remote_username": "root",
	    "remote_password": "xenroot",
            "boot_command": [
                "<wait>menu.c32",
                "<enter><wait><tab>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<wait>",
                "answerfile=http://{{ .HTTPIP }}:{{ .HTTPPort }}/answerfile install ",
                "sshpassword=password atexit=shell --- /install.img<enter>"
            ],
            "boot_wait": "3s",
            "disk_size": 51200,
            "format":"vdi_vhd",
            "http_directory": "http",
 	    "http_port_min": 8080,
	    "http_port_max": 8080,
            "iso_checksum": "d7564067f5593d48dbf84776b1ae3de4",
            "iso_checksum_type": "md5",
            "iso_url": "file:///home/jludlam/main.iso",
            "shutdown_command": "/sbin/shutdown -hP now > /dev/null &",
            "ssh_password": "password",
            "ssh_port": 22,
            "ssh_username": "root",
            "ssh_wait_timeout": "10000s",
            "vm_name": "XenServer"
        },
	{
	    "type": "virtualbox-ovf",
            "source_path": "output-virtualbox-iso/XenServer.ovf",
	    "ssh_password": "password",
            "ssh_port": 22,
            "ssh_username": "root",
            "ssh_wait_timeout": "10000s"

        }
    ]
}
