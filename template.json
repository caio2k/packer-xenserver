{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh",
	"scripts/base.sh",
        "scripts/libvirt.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "builders": [
    {
      "boot_command": [
        "<wait>menu.c32",
        "<enter><wait><tab>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<wait>",
        "answerfile=http://{{ .HTTPIP }}:{{ .HTTPPort }}/answerfile install ",
        "--- /install.img<enter>"
      ],
      "boot_wait": "5s",
      "guest_additions_mode": "disable",
      "headless": false,
      "disk_size": 51200,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "068b7cc6c51d30201c4dfde73a77f51b",
      "iso_checksum_type": "md5",
      "iso_url": "http://downloadns.citrix.com.edgesuite.net/akdlm/8170/2014-05-01/main.iso",
      "shutdown_command": "/sbin/shutdown -hP now",
      "ssh_password": "password",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vm_name": "XenServer nightly snapshot 2014-05-01",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "4096"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ],
  "post-processors": [
    {
      "compression_level": 9,
      "output": "XenServer-2014-05-01.box",
      "type": "vagrant",
      "vagrantfile_template": "Vagrantfile.template"
    }
  ]
}
